<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/manual_name_linearLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="姓名："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/manual_name_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="请输入姓名"
            android:textSize="15dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/manual_tel_linearLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/manual_name_linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电话："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/manual_tel_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            android:hint="请输入电话"
            android:textSize="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/manual_no_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/manual_tel_linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="身份证号："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/manual_no_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="请输入身份证"
            android:textSize="15dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/manual_message_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/manual_staff_lineraLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="访问信息："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/manual_message_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="请输入要访问的信息"
            android:textSize="15dp"
            android:singleLine="false"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/manual_staff_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/manual_no_lineraLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="访问职员姓名："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/manual_staff_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="请输入要访问的职员姓名"
            android:textSize="15dp"
            android:singleLine="false"/>


    </LinearLayout>


    <Button
        android:id="@+id/manual_save_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manual_no_lineraLayout"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_toEndOf="@+id/manual_no_lineraLayout"
        android:layout_toRightOf="@+id/manual_no_lineraLayout"
        android:text="提交请求" />





</RelativeLayout>
