<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/idcard_signout_linearLayout"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="签退人员姓名："
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/idcard__signout_name_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="请输入需要签退人员的姓名"
            android:textSize="15dp"/>
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认签退"
        android:layout_alignParentBottom="true"/>



    <ImageView

        android:id="@+id/idcard_signout_image_view"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#CDDC39"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idcard_signout_image_view"
        android:layout_alignStart="@+id/idcard_signout_image_view"
        android:layout_below="@+id/idcard_signout_image_view"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="14dp"
        android:text="拍照" />

</RelativeLayout>
