<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/create_manager_name_linearLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员姓名："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/create_manager_name_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="请输入管理员姓名"
            android:textSize="15dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/create_manager_tel_linearLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create_manager_name_linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员电话："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/create_manager_tel_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"

            android:hint="请输入管理员电话"
            android:textSize="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_manager_no_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create_manager_tel_linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员身份证号："
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/create_manager_no_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="请输入管理员身份证"
            android:textSize="15dp"/>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/create_manager_title_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create_manager_no_lineraLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员职位"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/create_manager_title_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:hint="请输入职员职位"
            android:textSize="15dp"
            android:singleLine="false"/>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/create_manager_password_lineraLayout"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create_manager_title_lineraLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员密码"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/create_manager_password_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:hint="请输入管理员的密码"
            android:textSize="15dp"
            android:singleLine="false"/>


    </LinearLayout>


    <Button

        android:id="@+id/create_manager_save_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="添加管理员" />





</RelativeLayout>
