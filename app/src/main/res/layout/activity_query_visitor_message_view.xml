<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="访客ID："
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/query_view_visitor_id_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textSize="30dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="访客姓名："
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/query_view_visitor_name_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="访客联系方式："
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/query_view_visitor_tel_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="访客身份证："
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/query_view_visitor_no_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>
